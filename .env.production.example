# =============================================================================
# NEXORA AED PLATFORM - PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to version control
# =============================================================================

# =============================================================================
# DATABASE - PostgreSQL
# =============================================================================
POSTGRES_DB=nexora_db
POSTGRES_USER=nexora_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_MIN_32_CHARS
POSTGRES_PORT=5432

# =============================================================================
# CACHE - Redis
# =============================================================================
REDIS_PASSWORD=CHANGE_THIS_SECURE_REDIS_PASSWORD_MIN_32_CHARS
REDIS_PORT=6379

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_GENERATE_WITH_OPENSSL_RAND_BASE64_64
JWT_REFRESH_SECRET=CHANGE_THIS_GENERATE_WITH_OPENSSL_RAND_BASE64_64
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# SERVICE PORTS
# =============================================================================
API_PORT=8080
ML_PORT=8002
FRONTEND_PORT=3000

# =============================================================================
# URLS
# =============================================================================
# For production, use your actual domain
FRONTEND_URL=https://nexora.yourdomain.com
NEXT_PUBLIC_API_URL=https://api.nexora.yourdomain.com
NEXT_PUBLIC_WS_URL=wss://api.nexora.yourdomain.com
ALLOWED_ORIGINS=https://nexora.yourdomain.com

# =============================================================================
# FEATURES
# =============================================================================
ENABLE_WEBSOCKETS=true
ENABLE_METRICS=true
LOG_LEVEL=info

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# EXTERNAL APIs (Optional - for live threat intelligence)
# =============================================================================
GITHUB_TOKEN=
ABUSEIPDB_API_KEY=c8b061ba5e772e3a4e383c54639c5ab930a7ad28e1195c4b8b0543bd2d7a79127bc2a09dc19b5777
NIST_NVD_API_KEY=0a32c1f5-8359-4aeb-a9ee-8a5caef4ddf1

# =============================================================================
# MONITORING (Optional)
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD
GRAFANA_ROOT_URL=https://grafana.nexora.yourdomain.com
