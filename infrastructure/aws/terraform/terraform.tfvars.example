# =============================================================================
# Nexora AWS Infrastructure - Environment Variables
# =============================================================================
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control
# =============================================================================

# AWS Configuration
aws_region = "us-east-1"
environment = "dev"
project_name = "nexora"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]
private_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
public_subnet_cidrs = ["10.0.101.0/24", "10.0.102.0/24"]

# RDS Configuration (Dev sizing)
db_instance_class = "db.t3.micro"
db_allocated_storage = 20
db_name = "nexora_db"
db_username = "nexora_admin"

# ElastiCache Configuration (Dev sizing)
redis_node_type = "cache.t3.micro"
redis_num_cache_nodes = 1

# ECS Configuration (Dev sizing - minimal)
frontend_cpu = 256
frontend_memory = 512
frontend_desired_count = 1

backend_cpu = 512
backend_memory = 1024
backend_desired_count = 1

ml_cpu = 512
ml_memory = 1024
ml_desired_count = 1

# Domain Configuration (leave empty for dev without custom domain)
domain_name = ""
create_dns_records = false

# Tags
tags = {
  Project     = "Nexora"
  ManagedBy   = "Terraform"
  Environment = "dev"
  CostCenter  = "Engineering"
}
