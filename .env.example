# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8080/ws

# Environment
NEXT_PUBLIC_ENVIRONMENT=development

# Authentication
NEXT_PUBLIC_AUTH_DOMAIN=auth.nexora.local
NEXT_PUBLIC_AUTH_CLIENT_ID=nexora-frontend

# Security
NEXT_PUBLIC_CSRF_ENDPOINT=/api/csrf-token

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

# Feature Flags
NEXT_PUBLIC_ENABLE_QUANTUM_FEATURES=true
NEXT_PUBLIC_ENABLE_THREAT_INTEL=true
NEXT_PUBLIC_ENABLE_COMPLIANCE=true

# Stripe Payment Integration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_FOUNDATION=price_foundation_id
STRIPE_PRICE_PROFESSIONAL=price_professional_id
STRIPE_PRICE_ENTERPRISE=price_enterprise_id

# Frontend URL (for Stripe redirects)
FRONTEND_URL=http://localhost:3000

# Development
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_MOCK_API=false
